{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "jest": true
    },
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
    "rules": {
        "react/sort-comp": 0,
        "no-debugger": 0,
        "import/prefer-default-export": 0,
        "react/prefer-stateless-function": 0,
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "react/no-array-index-key": 0,
        "react/forbid-prop-types": 0,
        "react/require-default-props": 0,
        "camelcase": 0,
        "semi": [2, "never"],
        "jsx-a11y/anchor-is-valid": 0
    },
    "globals": {
        "NODE_ENV": true,
        "API_HOST": true
    }
}